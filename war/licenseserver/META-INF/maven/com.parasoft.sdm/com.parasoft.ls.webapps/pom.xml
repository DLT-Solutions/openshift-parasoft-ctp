    <properties>
    	<profileVersion>5.4.3_lss2</profileVersion>
    	<maven.build.timestamp.format>yyyyMMdd HH:mm:ss</maven.build.timestamp.format>
    </properties>
    <version>${profileVersion}</version>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.3</version>
                <configuration>
                    <warName>licenseserver</warName>
                    <archiveClasses>true</archiveClasses>
                    <overlays>
                        <overlay>
                            <groupId>com.parasoft.dtp</groupId>
                            <artifactId>com.parasoft.sdm.shared.webapp</artifactId>
                        </overlay>
                    </overlays>                    
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
          <id>dev</id>
          <build>
              <plugins>
                  <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-war-plugin</artifactId>
                    <configuration>
                        <webXml>src/main/dev/web.xml</webXml>
                    </configuration>
                </plugin>
            </plugins>
        </build>
        </profile>
        
        <profile>
        <id>standalone</id>
        <properties>
    		<profileVersion>5.4.3_lss4</profileVersion>
    	</properties>
        <build>
            <plugins>
            <plugin>
				<groupId>org.codehaus.gmaven</groupId>
						<artifactId>gmaven-plugin</artifactId>
						<executions>
							<execution>
								<id>generate-resources-execute-groovyscript</id>
								<phase>prepare-package</phase>
								<goals>
									<goal>execute</goal>
								</goals>
								<configuration>
									<properties>
										<licserv.enc.location>http://svnpl-slave.parasoft.com/svn/repos/licserv/licserv.enc</licserv.enc.location>
										<temp.dir>${project.build.directory}/temp</temp.dir>
									</properties>
									<source>${project.basedir}/groovyScript/LicservDownload.groovy</source>
								</configuration>
							</execution>
						</executions>
                </plugin>
	          <plugin>
	        	<groupId>org.codehaus.mojo</groupId>
	        	<artifactId>buildnumber-maven-plugin</artifactId>
	        	<version>1.4</version>
	        	<executions>
	          	  <execution>
	            	<phase>validate</phase>
	            	<goals>
	              	  <goal>create</goal>
	            	</goals>
	          	  </execution>
	        	</executions>
		        <configuration>
		          <doCheck>false</doCheck>
		          <doUpdate>false</doUpdate>
		          <revisionOnScmFailure>DEV</revisionOnScmFailure>
		          <shortRevisionLength>11</shortRevisionLength>
		        </configuration>
	      	  </plugin>
                <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.3</version>
                <executions>
                	<execution>
                	<phase>package</phase>
                	</execution>
                </executions>
                <configuration>
                    <warName>licenseserver</warName>
	              <archive>
	            	<manifestEntries>
	              	  <Implementation-Version>${project.version}, ${maven.build.timestamp}, ${buildNumber}</Implementation-Version>
	            	</manifestEntries>
	          	  </archive>
                    <webXml>src/main/standalone/web.xml</webXml>
                    <archiveClasses>true</archiveClasses>
                    <webResources>
                    	<resource>
                    		<directory>target/temp</directory>
                    		<includes>
                    			<include>licserv.enc</include>
                    		</includes>
                    		<targetPath>WEB-INF/LicenseServer/conf/</targetPath>
                    	</resource>
                        <resource>
                            <directory>src/main/resources</directory>
                            <includes>
                               <include>log4j.xml</include>
                               <include>PSTSecConfig.xml</include>
                               <include>PSTRootConfig.xml</include>
                               <include>oidc.json</include>
                            </includes>
                            <targetPath>WEB-INF/classes/</targetPath>
                        </resource>
                        <resource>
                            <directory>src/main/resources/standalone/webapp/jsp</directory>
                            <includes>
                                <include>header.jsp</include> 
                                <include>accessDeniedPage.jsp</include>
                            </includes>
                            <targetPath>jsp</targetPath>
                        </resource>
                    </webResources>
                    <overlays>
                        <overlay>
                            <groupId>com.parasoft.dtp</groupId>
                            <artifactId>com.parasoft.sdm.shared.webapp</artifactId>
                        </overlay>
                    </overlays>                 
                </configuration>
            </plugin>
            <plugin>
            <artifactId>maven-enforcer-plugin</artifactId>
            <version>1.3.1</version>
            <executions>
                <execution>
                	<phase>package</phase>
                    <id>enforce-banned-dependencies</id>
                    <configuration>
                        <skip>true</skip>
                    </configuration>
                </execution>
            </executions>
        </plugin>
      </plugins>
    </build>
